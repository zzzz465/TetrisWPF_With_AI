<UserControl x:Class="Tetris_WPF_Proj.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tetris_WPF_Proj"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
<!-- Binding을 하려면 x:Name을 통해 이름을 지정한 다음, ElementName=이름 이후 Path=속성을 하거나, 
     Binding은 DataContext에 의한 것이므로, DataContext를 먼저 지정해준다음 Binding Path=속성을 하면 된다, DataContext는 기본적으로 자식에게 전파됨
    -->
    
    <Rectangle Fill="{Binding Path=CellBrush}">
    </Rectangle>
</UserControl>