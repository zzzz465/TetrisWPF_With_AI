<UserControl x:Class="Tetris_WPF_Proj.TetrisGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tetris_WPF_Proj"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400"
             x:Name="RootCanvas" MinWidth="200" MinHeight="400" Width="400" Height="800">
    <Canvas x:Name="GridCanvas" Width="{Binding ElementName=RootCanvas, Path=Width}"
                                    Height="{Binding ElementName=RootCanvas, Path=Height}">
    </Canvas>
</UserControl>